<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainScreenHolder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/very_dark_purple"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/topCardView"
        style="@style/CardViewOnlyBottomCorners"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:strokeColor="@color/very_dark_purple"
        android:backgroundTint="@color/very_light_purple">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="DANIK KOMBAT"
            android:textColor="@color/white"
            android:textSize="26sp" />

    </com.google.android.material.card.MaterialCardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/coinsCounterTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:gravity="center"
            android:text="9999 coins"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/coinGifView"
            android:src="@drawable/pig"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/coinsCounterTextView"
            app:layout_constraintStart_toEndOf="@+id/coinsCounterTextView"
            app:layout_constraintTop_toTopOf="@+id/coinsCounterTextView" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/clickableImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:civ_border_width="7dp"
        app:civ_border_color="@color/very_light_purple"
        android:src="@drawable/test_photo"
        android:layout_weight="1"
        android:layout_marginHorizontal="30dp"/>

    <com.google.android.material.card.MaterialCardView
        style="@style/CardViewOnlyTopCorners"
        android:backgroundTint="@color/very_light_purple"
        android:elevation="0dp"
        app:strokeColor="@color/very_dark_purple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="26dp">

            <ImageView
                android:id="@+id/inventoryButton"
                android:src="@drawable/inventory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/shopButton"
                android:src="@drawable/shop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>